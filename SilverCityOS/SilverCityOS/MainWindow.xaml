<Window x:Name="MainWindow1" x:Class="SilverCityOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilverCityOS"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" VerticalAlignment="Top" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="stkPanel_MenuPanel" Grid.Column="0" Height="1080" Orientation ="Vertical" VerticalAlignment="Top">
            <Button x:Name="btnCallWaiter" BorderBrush="Black" BorderThickness="10,7,10,3.5" Click="btnCallWaiterClick" Background="{x:Null}">
                <!--Height="200">-->
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold">Call Waiter</TextBlock>
                            <TextBlock>Lets the server know you require immediate assistance</TextBlock>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
                <Viewbox Height="150">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Pictures/ScreenElement/bell.png" Height="150"/>
                        <TextBlock x:Name="waiterTextbox" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Margin="0 0 10 0">Call Waiter</TextBlock>
                    </StackPanel>
                </Viewbox>
            </Button>
            <!--<Label Height="80" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="10 5 10 5" Background="LightGray">MENU</Label>
            -->
            <Border BorderThickness="0">
                <StackPanel x:Name="controlSections">
                    <Button x:Name="btnAppetizers" Content="Appetizers" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnAppetizers_Click"/>
                    <Button x:Name="btnSoup" Content="Soups/Sizzling Rice" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnSoup_Click"/>
                    <Button x:Name="btnBeef" Content="Beef" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnBeef_Click"/>
                    <Button x:Name="btnChicken" Content="Chicken/Duck" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnChicken_Click"/>
                    <Button x:Name="btnSeafood" Content="Seafood" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnSeafood_Click"/>
                    <Button x:Name="btnVegie" Content="Vegetables" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnVegie_Click"/>
                    <Button x:Name="btnHot" Content="Hot Plate/Pot" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnHot_Click"/>
                    <Button x:Name="btnRice" Content="Fried Rice" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnRice_Click"/>
                    <Button x:Name="btnNoodle" Content="Fried Noodles" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnNoodle_Click"/>
                    <Button x:Name="btnEgg" Content="Egg Foo Young" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnEgg_Click"/>
                    <Button x:Name="btnChopSuey" Content="Chop Suey" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnChopSuey_Click"/>
                    <Button x:Name="btnAboutUs" Content="About Us" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnAboutUs_Click"/>
                </StackPanel>
            </Border>
                      
            <Button x:Name="btnHelp" Height="80" BorderBrush="Black" BorderThickness="10 10" FontSize="30" Click="btnHelp_Click">HELP INFO</Button>
            <Popup x:Name="popHelp"  HorizontalOffset="100" VerticalOffset="-100" >
                <Border  >
                    <TextBlock Opacity="0.5" Background="LightYellow" Height="100" Width="150" TextWrapping="Wrap">This is the help menu button. Click this button for help using the system. Click again to toggle help items</TextBlock>
                </Border>
            </Popup>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label x:Name="lblCategories" BorderBrush="Black" BorderThickness="0 4 4 4" Height="100" FontSize="70" FontWeight="DemiBold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">SILVER CITY RESTAURANT</Label>
            <ScrollViewer Panel.ZIndex="2" x:Name="scrlViewer_MenuItems" VerticalAlignment="Top" Height="980">
                <StackPanel x:Name="sViewer_Stackpanel" >
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <StackPanel x:Name="stkPanel_OrderPanel" Grid.Column="2">
