<Window x:Name="MainWindow1" x:Class="SilverCityOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilverCityOS"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" VerticalAlignment="Top" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel x:Name="stkPanel_MenuPanel" Grid.Column="0" Height="1080" Orientation ="Vertical" VerticalAlignment="Top">
            <Button x:Name="btnCallWaiter" BorderBrush="Black" BorderThickness="10,7,10,3.5" Click="btnCallWaiterClick" Background="{x:Null}">
                <!--Height="200">-->
                <Button.ToolTip>
                   
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold">Call Waiter</TextBlock>
                            <TextBlock>Lets the server know you require immediate assistance</TextBlock>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>

                <Viewbox Height="150">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Pictures/ScreenElement/bell.png" Height="150"/>
                        <TextBlock x:Name="waiterTextbox" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Margin="0 0 10 0">Call Waiter</TextBlock>
                        <Popup  x:Name="popCallWaiter"  HorizontalOffset="100" VerticalOffset="-50" >
                            <Border CornerRadius="3" BorderThickness="1"  >
                                <TextBlock  Background="LightYellow" Height="100" Width="150"  TextWrapping="Wrap">Click This button if you require assistance from your server</TextBlock>
                            </Border>
                        </Popup>
                    </StackPanel>
                    
                </Viewbox>
               
            </Button>
           
            <!--<Label Height="80" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="10 5 10 5" Background="LightGray">MENU</Label>
            -->
            <Border BorderThickness="0">
                <StackPanel x:Name="controlSections">
                    <Button x:Name="btnAppetizers" Content="Appetizers" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnAppetizers_Click"/>
                    <Button x:Name="btnSoup" Content="Soups/Sizzling Rice" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnSoup_Click"/>
                    <Button x:Name="btnBeef" Content="Beef" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnBeef_Click"/>
                    <Button x:Name="btnChicken" Content="Chicken/Duck" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnChicken_Click"/>
                    <Button x:Name="btnSeafood" Content="Seafood" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnSeafood_Click"/>
                    <Button x:Name="btnVegie" Content="Vegetables" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnVegie_Click"/>
                    <Button x:Name="btnHot" Content="Hot Plate/Pot" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnHot_Click"/>
                    <Button x:Name="btnRice" Content="Fried Rice" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnRice_Click"/>
                    <Button x:Name="btnNoodle" Content="Fried Noodles" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnNoodle_Click"/>
                    <Button x:Name="btnEgg" Content="Egg Foo Young" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnEgg_Click"/>
                    <Button x:Name="btnChopSuey" Content="Chop Suey" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnChopSuey_Click"/>
                    <Button x:Name="btnAboutUs" Content="About Us" Height="65" FontSize="24" FontWeight="Bold" Background="#03D693" Foreground="AntiqueWhite" BorderBrush="Black" BorderThickness="10,3.5" Click="btnAboutUs_Click"/>
                </StackPanel>
            </Border>
                      
            <Button x:Name="btnHelp" Height="80" BorderBrush="Black" BorderThickness="10 10" FontSize="30" Click="btnHelp_Click">HELP INFO</Button>
            <Popup  x:Name="popHelp"  HorizontalOffset="100" VerticalOffset="-100" >
                <Border CornerRadius="3" BorderThickness="1"  >
                    <TextBlock  Background="LightYellow" Height="100" Width="150"  TextWrapping="Wrap">This is the help menu button. Click this button for help using the system. Click again to toggle help items</TextBlock>
                </Border>
            </Popup>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label x:Name="lblCategories" BorderBrush="Black" BorderThickness="0 4 4 4" Height="100" FontSize="70" FontWeight="DemiBold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">SILVER CITY RESTAURANT</Label>
            <ScrollViewer Panel.ZIndex="2" x:Name="scrlViewer_MenuItems" VerticalAlignment="Top" Height="980">
                <StackPanel x:Name="sViewer_Stackpanel" >
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <Popup  x:Name="popMenu"  Placement="Center" PlacementTarget="{Binding ElementName=lblCategories}" >
            <Border CornerRadius="3" BorderThickness="1"  >
                <TextBlock  Background="LightYellow" Height="100" Width="150"  TextWrapping="Wrap">This Is the Menu section. Click the Image to see a more detailed view and description of a Menu Item</TextBlock>
            </Border>
        </Popup>
        <StackPanel x:Name="stkPanel_OrderPanel" Grid.Column="2">
            <Label x:Name="lblOrderItems" BorderBrush="Black" BorderThickness="0 4 4 4" Height="100" FontSize="50" FontWeight="DemiBold"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">ORDER ITEMS</Label>
            <ScrollViewer x:Name="scrlViewerOrderItems" Height="580">
                <StackPanel x:Name="orderItems">                 
                </StackPanel>
            </ScrollViewer>
            <Popup  x:Name="popOrderPanel"  Placement="Center" PlacementTarget="{Binding ElementName=scrlViewerOrderItems}" >
                <Border CornerRadius="3" BorderThickness="1"  >
                    <TextBlock  Background="LightYellow" Height="150" Width="150"  TextWrapping="Wrap">This Is the ordered Items section. You can scroll to see all items orderd. You can remove an item from the list by pressing the "X" button. The subtotal, tax and total price are automatically calculated.</TextBlock>
                </Border>
            </Popup>
            <Label x:Name="lblSTotal" Height="30" Margin="10 0 0 0"  Padding="0 0 20 0"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" FontSize="18">Sub Total: $100.00</Label>
            <Label x:Name="lblTax" Height="30" Margin="10 0 0 0" Padding="0 0 20 0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" FontSize="18">Tax: $100.00</Label>
            <Label x:Name="lblTotal" Height ="40" BorderBrush="Black" BorderThickness="0 2" Margin="10 0" Padding="0 0 10 0" FontWeight="Bold" HorizontalContentAlignment="Right" HorizontalAlignment="Stretch" VerticalContentAlignment="Bottom" FontSize="22">Total: $1600.00</Label>
            <Viewbox>
                <Button x:Name="btnSpecialNote" Height="40" HorizontalAlignment="Stretch" Margin="10 10 10 0" FontSize="22" Padding="10 0" Click="btnSpecialNote_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock FontWeight="Bold">Click if need for special help</TextBlock>
                        </ToolTip>
                    </Button.ToolTip>
                    Dietary/Allergy Concerns
                </Button>
            </Viewbox>
            <Popup  x:Name="popAllergy"  Placement="Center" PlacementTarget="{Binding ElementName=btnSpecialNote}" >
                <Border CornerRadius="3" BorderThickness="1"  >
                    <TextBlock  Background="LightYellow"  Height="50" Width="100"  TextWrapping="Wrap">Click this button for help with Alergies or help with dietary concerns</TextBlock>
                </Border>
            </Popup>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnDineIn" Height="100" Margin="15 10 5 0" Padding="5" Grid.Column="0" VerticalContentAlignment="Center" IsEnabled="False" Click="btnDineIn_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock FontWeight="Bold">Click To Make an Order for Dine In</TextBlock>
                        </ToolTip>
                    </Button.ToolTip>
                    <Viewbox>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/ScreenElement/DineIn.png"/>
                            <Label HorizontalAlignment="Center" VerticalContentAlignment="Center">DINE IN</Label>
                        </StackPanel>
                    </Viewbox>                    
                </Button>
                <Popup  x:Name="popDineIn"  Placement="Center" PlacementTarget="{Binding ElementName=btnDineIn}" >
                    <Border CornerRadius="3" BorderThickness="1"  >
                        <TextBlock  Background="LightYellow" Height="50" Width="100"  TextWrapping="Wrap">Click Here to have your order Placed for Dine In</TextBlock>
                    </Border>
                </Popup>
                <Button x:Name="btnTakeOut" Height="100"  Margin="5 10 15 0"  Padding="0 0 0 0" Grid.Column="1" VerticalContentAlignment="Top" IsEnabled="False" Click="btnTakeOut_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock FontWeight="Bold">Click To Make an Order for Take Out</TextBlock>
                        </ToolTip>
                    </Button.ToolTip>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="Pictures/ScreenElement/TakeOut2.png"/>
                        <Label Grid.Row="1" HorizontalAlignment="Center" >TAKEOUT</Label>
                    </Grid>
                </Button>
                <Popup  x:Name="popTakeOut"  Placement="Center" PlacementTarget="{Binding ElementName=btnTakeOut}" >
                    <Border CornerRadius="3" BorderThickness="1"  >
                        <TextBlock  Background="LightYellow" Height="50" Width="100"  TextWrapping="Wrap">Click Here to have your order Placed for Take out</TextBlock>
                    </Border>
                </Popup>
            </Grid>
            <Button x:Name="btnPayBill" Height="70" Margin="15 10 15 0" Click="btnPayBill_Click">    
                <Grid Width="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" HorizontalAlignment="Right" Margin="0 0 5 0" Source="Pictures/ScreenElement/PayBill.png" />
                    <Label Grid.Column="1" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="5 0 0 0" FontSize="20">PayBill</Label>
                </Grid>
            </Button>
            <Popup  x:Name="popBill" Placement="Center" PlacementTarget="{Binding ElementName=btnPayBill}" >
                <Border CornerRadius="3" BorderThickness="1"  >
                    <TextBlock  Background="LightYellow" Height="50" Width="150"  TextWrapping="Wrap">Click this button to request your Bill</TextBlock>
                </Border>
            </Popup>
        </StackPanel>
        <!--Rectangle x:Name="cover" Grid.ColumnSpan="3" Opacity="0.7" Fill="Black"/-->
    </Grid>
</Window>
