<UserControl x:Class="SilverCityOS.OrderedItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SilverCityOS"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <Grid>
        <Border BorderThickness="0 2 0 2" BorderBrush="Black" Height="70">
            <Grid x:Name="main" Height="70" Background="#FFF">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="button" Grid.RowSpan="2" BorderBrush="Red" BorderThickness="3" Width="26" Height="8"></Button>
                <TextBox Grid.RowSpan="2" Grid.Column="1" BorderThickness="0" VerticalContentAlignment="Center" TextAlignment="Left" FontSize="22" Background="Transparent">ITEM NAME</TextBox>
                <TextBox Grid.Column="2" VerticalContentAlignment="Center" TextAlignment="Right" FontSize="22" BorderThickness="0" Background="Transparent">$15.00</TextBox>
                <TextBox Grid.Column="2" BorderThickness="0" Grid.Row="1" FontSize="18" Background="Transparent" TextAlignment="Right">x1</TextBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
